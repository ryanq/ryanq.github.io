---
import Base from '@layouts/Base.astro'
import Page from '@layouts/Page.astro'

const { frontmatter } = Astro.props;
---

<Page title={frontmatter.title} description={frontmatter.description}>
  <title slot="head">{frontmatter.title}</title>

  <main>
    <h1>{frontmatter.title}</h1>
    <slot />
  </main>
</Page>

<style>
  main {
    max-width: 70ch;
    margin: 0 auto;
    padding: 1rem;
  }

  main :global(h1, h2, h3, h4) {
    margin-block: 1rem;
  }

  main :global(p + p) {
    margin-top: 1rem;
  }

  main :global(section[role="note"]) {
    margin-block: 1rem;
    padding-block: 1rem;
    padding-inline: 2rem;
    
    background-color: var(--c-note);

    margin-trim: block;
  }
</style>
